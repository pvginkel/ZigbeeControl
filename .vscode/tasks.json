{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Claude",
      "type": "shell",
      "command": "claudebox",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "icon": { "id": "sparkle" },
      "problemMatcher": [],
      "presentation": {
        "panel": "new",
        "reveal": "always",
        "focus": true,
        "showReuseMessage": false
      },
      "runOptions": {
        "reevaluateOnRerun": true,
        "instanceLimit": 999
      },
      "isBackground": true
    },
    {
      "label": "Server",
      "type": "shell",
      "command": "scripts/dev-server.sh",
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "icon": { "id": "server" },
      "problemMatcher": [],
      "presentation": {
        "panel": "dedicated",
        "reveal": "always",
        "focus": false,
        "showReuseMessage": true
      },
      "runOptions": {
        "reevaluateOnRerun": true
      },
      "isBackground": true
    },
    {
      "label": "SSE Gateway",
      "type": "shell",
      "command": "scripts/dev-sse-gateway.sh",
      "options": {
        "cwd": "${workspaceFolder}",
        "env": {
          "SSE_GATEWAY_ROOT": "../../SSEGateway"
        }
      },
      "icon": { "id": "server" },
      "problemMatcher": [],
      "presentation": {
        "panel": "dedicated",
        "reveal": "always",
        "focus": false,
        "showReuseMessage": true
      },
      "runOptions": {
        "reevaluateOnRerun": true
      },
      "isBackground": true
    }
  ]
}
